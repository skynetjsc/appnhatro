    <style name="img_bottom_chat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp8</item>
    </style>

    <style name="style_numberpad_linear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp68</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>

        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_numberpad_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/mango</item>
    </style>

    <style name="style_numberpad_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
