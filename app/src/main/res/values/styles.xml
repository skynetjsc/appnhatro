<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:colorActivatedHighlight">@color/green</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>

    </style>


    <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">#ffff00</item>
    </style>

    <style name="DialogProgress" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="ToolBarStyle" parent="Base.Theme.AppCompat">
        <item name="android:textColorPrimary">@color/color_pin</item>
        <item name="android:textColorSecondary">@color/color_pin</item>
        <item name="actionMenuTextColor">@color/color_pin</item>

    </style>

    <style name="DetailProductTheme" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/red_organce</item>
        <item name="android:textColor">@color/dusk_blue</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="signup_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/background_button_red_5radius</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp12</item>
        <item name="android:layout_marginTop">@dimen/dp30</item>
        <item name="android:textSize">@dimen/dps16</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="login_edt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_edit_bg</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/dp16</item>
    </style>

    <style name="opt_dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_left_radius_dialog</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dp16</item>
    </style>

    <style name="fav_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_washroom</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:drawablePadding">@dimen/dp4</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#b83f3f47</item>
    </style>

    <style name="post_style_title_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="post_style_title_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="post_style_editext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="post_style_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">#25a8b6c8</item>
    </style>

    <style name="post_style_unit_editext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
