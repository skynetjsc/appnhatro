    <style name="rate" parent="Theme.AppCompat">
        <item name="colorAccent">@color/yello</item>
        <item name="colorControlNormal">#8024253d</item>
        <item name="colorControlActivated">@color/yello</item>
    </style>


    <style name="div_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#80000000</item>
    </style>

    <style name="CoffeeDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="swipe_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/dp8</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/ic_pencil_edit_button</item>
    </style>

    <style name="swipe_text_whitelist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/dp8</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_menu_popup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:drawablePadding">@dimen/dp16</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/ic_comment_dots</item>
