<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="246.6dp"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:id="@+id/speech_loading_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:orientation="vertical"
            >
            <View
                android:id="@+id/speech_loading_icon"
                android:layout_marginTop="5dp"
                android:layout_width="27dp"
                android:layout_height="38.6dp"
                android:background="@drawable/active_img"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/speech_loading_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sap_speech_loading_msg"
                android:textSize="10sp"
                android:textColor="#909396"
                android:layout_above="@id/speech_loading_icon"
                android:visibility="gone"
                />
            <ProgressBar
                android:id="@+id/speech_progressbar"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_centerHorizontal="true"
                android:indeterminateDrawable="@drawable/speech_progress_anim"
                android:visibility="gone"
                />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/speech_start_layout"
            android:layout_below="@id/speech_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/speech_btn_selector"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="28.3dp"
            >
            <TextView
                android:id="@+id/sap_speech_btn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sap_speech_btn_msg"
                android:layout_centerInParent="true"
                />
            <View
                android:layout_width="11dp"
                android:layout_height="15.6dp"
                android:background="@drawable/active_img"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sap_speech_btn_txt"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
